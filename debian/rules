#!/usr/bin/make -f

# This file was automatically generated by stdeb 0.6.0+git at
# Sun, 17 Feb 2013 12:59:45 +0100

# Install TeX files for now as upstream TeX Live has a bug
export PYBUILD_BUILD_ARGS=--build-tex
export PYBUILD_INSTALL_ARGS=--install-tex

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_clean:
	rm -rf build/mo
	# Remove the pot files (yeah, this is probably not the right
	# solution)
	rm -f po/sdaps.pot
	rm -f tex/po/sdaps-tex.pot
	# And the test directory
	rm -rf test/projects
	dh_clean

override_dh_auto_build:
	dh_auto_build

	# Unfortunately, testing does not currently work due to issues
	# with the local run path magic.